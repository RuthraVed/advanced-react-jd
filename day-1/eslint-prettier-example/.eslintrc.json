{
  "extends": [
      "react-app",
      "react-app/jest",
      "airbnb",
      "plugin:prettier/recommended"
  ],
  "plugins": ["prettier"],
  "env": {
      "browser": true,
      "es2021": true,
      "jest": true
  },
  "rules": {
      "semi": ["error", "always"],
      "quotes": ["error", "double"],
      "react/react-in-jsx-scope": "off",
      "no-unreachable": "error",
      "prettier/prettier": ["error"],
      "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
      "import/no-extraneous-dependencies": [
          "error",
          { "devDependencies": true }
      ]
  }
}